    ],
    header_namespace = "loom/writer",
    exported_headers = [
        "DeltaEncodingVisitor.h",
    ],
    compiler_flags = [
        "-fvisibility=hidden",
        "-fexceptions",
        "-DLOG_TAG=\"Loom/Writer\"",
