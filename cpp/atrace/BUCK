load("//buck_imports:profilo_path.bzl", "profilo_path")
load("//build_defs:fb_xplat_cxx.bzl", "fb_xplat_cxx_library")

fb_xplat_cxx_library(
    name = "atrace",
    srcs = [
        "Atrace.cpp",
        "jni.cpp",
    ],
    headers = glob(
        ["*.h"],
    ),
    header_namespace = "loom/atrace",
    allow_jni_merging = True,
    compiler_flags = [
        "-fexceptions",
        "-std=gnu++14",
        "-DLOG_TAG=\"Loom/atrace\"",
    ],
    soname = "libloom_atrace.$(ext)",
    supported_platforms_regex = "^android-(armv7|x86)$",
    visibility = [
        profilo_path("..."),
        "//perftests/benchmarks/java/com/facebook/benchmarks/loom/...",
    ],
    deps = [
        profilo_path("cpp:constants"),
        profilo_path("cpp:loom"),
        profilo_path("cpp/logger:logger"),
        profilo_path("deps/atomic:atomic"),
        profilo_path("deps/fb:fb"),
        profilo_path("deps/fbjni:fbjni"),
        profilo_path("deps/linker:linker"),
        profilo_path("deps/sigmux:sigmux"),
    ],
)
